# ============================================================
# IPTV Suisse - Environment Variables
# Copy this to .env.local and fill in your values
# ============================================================

# Supabase — https://supabase.com
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Resend — https://resend.com (for transactional emails)
RESEND_API_KEY=re_your_api_key

# Site URL (no trailing slash)
NEXT_PUBLIC_SITE_URL=https://iptvsuisse.co

# Google Analytics (GA4 Measurement ID)
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Crisp Live Chat — https://crisp.chat (Website ID)
NEXT_PUBLIC_CRISP_WEBSITE_ID=your-crisp-website-id
